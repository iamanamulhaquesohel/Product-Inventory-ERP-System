@model ProductType
@{
    ViewData["Title"] = "Create";
}

    <fieldset class="border p-2 mb-2">
        <legend class=" text-center display-6">
            Create Product Type
        </legend>
    </fieldset>
    <div class="border px-2 mb-2">
        <div class="row">
            <div class="col-4"></div>

            <div class="col-8 mt-2">
                <form method="post" asp-area="Inventory" asp-controller="ProductType" asp-action="Create">
                    <div class="form-group row mb-2">
                        <label asp-for="Name" class="col-form-label col-2"></label>
                        <div class="col-8">
                            <input type="text" asp-for="Name" class="form-control" placeholder="Enter Product Type Name" />
                            <span asp-validation-for="Name" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group row mb-2">
                        <label asp-for="Description" class="col-form-label col-2"></label>
                        <div class="col-8">
                            <textarea type="text" asp-for="Description" class="form-control"  placeholder="Enter Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group row mb-2">
                        <div class="col-8 offset-2">
                            <button type="submit" class="btn btn-success">Save</button>
                            <button type="reset" class="btn btn-danger">Reset</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>

@section Styles
{
   <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
}
@section Scripts
{
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
